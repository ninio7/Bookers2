<div class="container">
  <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
      <tbody>
       <table class="table">
        <tr></tr>
       <tr>
	      <th>name</th>
	      <th><%= @book.user.name %></th>
       </tr>
       <tr>
	      <th>introduction</th>
	      <th><%= @book.user.introduction %></th>
       </tr>
      </tbody></table>

    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i><% end %>


    <h2 class="mt-3">New book</h2>

     <%= form_with model: @newbook do |f| %>

     <div class="form-froup">
      <%= f.label :Title %><br>
      <%= f.text_field :title,class:"form-control"%>
     </div>

     <div class="form-froup"><%= f.label :Opnion %><br>
     <%= f.text_area :body,class:"form-control" %>
     </div>

     <div class="actions">
     <%= f.submit 'Create Book',class:"btn btn-success" %>
     </div>

     <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
  	 <h2>Book detail</h2>
  		 <table class="table">
  		  <tbody><tr>
          <td><%= link_to users_path do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @book.user.name %><% end %></td>
          <td><%= link_to book_path do %><%= @book.title %><% end %></td>
          <td><%= @book.body %></td>

          <td><%= link_to "Edit", edit_book_path(@book.id) ,class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", about_path, class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr></tbody>
        </table>
     </div>
    </div>
  </div>




