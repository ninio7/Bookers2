    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	 <%= form_with model: @book do |f| %>
    	 
    	<div class="form-group">
       <%= f.label :Title %><br>
       <%= f.text_field :title, autofocus: true, id:"inputTitle",class:"form-control"%>
